  <!-- jQuery -->
  <script src="/static/plugins/jquery/jquery.min.js"></script>

  <!-- Bootstrap 4 -->
  <script src="/static/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- AdminLTE App -->
  <script src="/static/dist/js/adminlte.min.js"></script>

  <!-- Canvas -->
  <script>
    function formatearFecha(fecha) {
      const options = {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      };
      return new Date(fecha).toLocaleDateString(undefined, options);
    }

    function obtenerDatosJSON() {
      fetch('https://raw.githubusercontent.com/AlexDeveloperUwU/miniprojects/jsonstorage/graph.json')
        .then(response => response.json())
        .then(data => {
          const fechas = data.map(item => formatearFecha(item.date));
          const dawHonor = data.map(item => item.DAW_totalHonor);
          const dawScore = data.map(item => item.DAW_totalScore);
          const damHonor = data.map(item => item.DAM_totalHonor);
          const damScore = data.map(item => item.DAM_totalScore);
          const losersHonor = data.map(item => item.losers_totalHonor); // Agrega datos del nuevo clan "losers"
          const losersScore = data.map(item => item.losers_totalScore); // Agrega datos del nuevo clan "losers"

          var ctx = document.getElementById('myChart').getContext('2d');
          var myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: fechas,
              datasets: [{
                  label: 'Honor DAW',
                  data: dawHonor,
                  borderColor: 'rgba(255, 99, 132, 1)',
                  borderWidth: 2,
                  fill: false,
                },
                {
                  label: 'Puntuación DAW',
                  data: dawScore,
                  borderColor: 'rgba(54, 162, 235, 1)',
                  borderWidth: 2,
                  fill: false,
                },
                {
                  label: 'Honor DAM',
                  data: damHonor,
                  borderColor: 'rgba(255, 206, 86, 1)',
                  borderWidth: 2,
                  fill: false,
                },
                {
                  label: 'Puntuación DAM',
                  data: damScore,
                  borderColor: 'rgba(75, 192, 192, 1)',
                  borderWidth: 2,
                  fill: false,
                },
                {
                  label: 'Honor Losers',
                  data: losersHonor,
                  borderColor: 'rgba(153, 102, 255, 1)',
                  borderWidth: 2,
                  fill: false,
                },
                {
                  label: 'Puntuación Losers',
                  data: losersScore,
                  borderColor: 'rgba(255, 159, 64, 1)',
                  borderWidth: 2,
                  fill: false,
                },
              ],
            },
            options: {
              scales: {
                y: {
                  beginAtZero: true,
                },
              },
            },
          });
        })
        .catch(error => {
          console.error('Error al obtener los datos:', error);
        });
    }
    window.addEventListener('load', obtenerDatosJSON);
  </script>
</body>

</html>